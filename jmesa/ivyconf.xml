<ivyconf>
    <conf defaultResolver="default"/>
    <resolvers>
		<filesystem name="local">
            <ivy pattern="${user.home}/ivy/[organisation]/[module]/ivy-[revision].xml"/>
            <artifact pattern="${user.home}/ivy/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
		</filesystem>    
        <chain name="default">
            <resolver ref="local"/>
        </chain>
    </resolvers>
</ivyconf>
